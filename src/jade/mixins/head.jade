	//- link(href="http://fonts.googleapis.com/css?family=PT+Serif:400italic&amp;subset=latin,cyrillic",rel="stylesheet",type="text/css")
	
	block css-link
		-var selected = css;
		-var mainRoot = "css/main.css";

	-var division = { 'root': '', 'nested': '../', 'nested2': '../../'};
	
	each val, key in division

		if selected === key
			link(href=val+mainRoot,rel="stylesheet")
	

