	script.
		
		// WOW Animation ////////////////////////////////
		new WOW().init();


		// Slider /////////////////////////////////////
		$(document).ready(function() {
			$(function() {
				$('.slide-line').slideLine({
					ratio: 0.99
				});
			});
		});



		
		$(document).ready(function(){
	
			// We need to turn it into a function.
			// To apply the changes both on document ready and when we resize the browser.
				
			var ravenous = function() { 

			// Set the matchMedia

				if (window.matchMedia('(min-width: 768px)').matches)
				{
												

						// Parallax ////////////////////////////////////
						$.fn.parallax = function ( pos ){
							var $this = this,
								scrolled = $(window).scrollTop();
							//- var scrolledMain = $(window).scrollTop(653);

							$this.css('bottom', (pos + scrolled * 0.4) + 'px');
						}

						$(window).scroll(function(e){
							$('.daisy-main__320').parallax(500);
						});


						$(window).scroll(function(e){
							if ($(window).scrollTop() > 3500) {
								var scrolled = $(window).scrollTop();

								$('.daisy-search__map').css('bottom', (-600 + scrolled / 4) + 'px');
							}
						});
					
				}




			};

			// Set the function to resize
			$(window).resize(ravenous);
			// Call the function
			ravenous();  

		});


		$(document).ready(function(){
	
			// We need to turn it into a function.
			// To apply the changes both on document ready and when we resize the browser.
				
			var ravenous = function() { 

			// Set the matchMedia

				if (window.matchMedia('(min-width: 992px)').matches)
				{

					// Bg follow to /////////////////////////////////
						var windw = this;

						$.fn.followTo = function ( pos ) {
							var $this = this,
								$window = $(windw);

								$(window).scroll(function(e){
									if ($window.scrollTop() > pos) {
										$this.css({
											position: 'absolute',
											top: pos + bgTop
										});

									} else {
										$this.css({
											position: 'fixed',
											top: '70px'
										})
									}
								})
						}

						var bgTop = 70;

						$('.daisy-bg').followTo(370);


						$.fn.objFadeOut = function ( pos ) {
							var $this = this,
								$window = $(windw);

								$(window).scroll(function(e){
									if ($window.scrollTop() > pos) {
										$this.removeClass('subheaderFadeIn')
										.addClass('subheaderFadeOut');

									} else {
										$this.removeClass('subheaderFadeOut')
										.addClass('subheaderFadeIn');
									}
								})
						}

						$('.daisy-subheader').objFadeOut(120);
				}

			}
				// Set the function to resize
			$(window).resize(ravenous);
			// Call the function
			ravenous();  

		});

		
